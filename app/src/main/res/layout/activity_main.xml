<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/cherryblossom"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">



    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/date_input"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/date_button"
        android:layout_alignBottom="@+id/date_input"
        android:layout_toRightOf="@+id/date_input" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_input"
        android:layout_below="@+id/date_input"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT TIME"
        android:id="@+id/time_button"
        android:layout_below="@+id/date_button"
        android:layout_alignLeft="@+id/date_button"
        android:layout_alignStart="@+id/date_button"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/textView_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_input"
        android:layout_marginTop="28dp"
        android:background="?android:attr/detailsElementBackground"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_button"
        android:layout_alignStart="@+id/date_button"
        android:layout_alignLeft="@+id/date_button"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:text="Reset" />


</RelativeLayout>
